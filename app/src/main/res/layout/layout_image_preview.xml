<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lotion"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:id="@+id/viewTopIP"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:background="@drawable/bg_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageButton
        android:id="@+id/ibBackIP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:background="?attr/selectableItemBackground"
        android:padding="@dimen/_10sdp"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="@string/button"
        app:layout_constraintTop_toTopOf="@id/viewTopIP"
        app:layout_constraintBottom_toBottomOf="@id/viewTopIP"
        app:layout_constraintStart_toStartOf="@id/viewTopIP"/>

    <TextView
        android:id="@+id/tvHeadIP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/image_preview"
        android:textAlignment="center"
        android:textColor="@color/lotion"
        android:textSize="@dimen/_17ssp"
        android:fontFamily="@font/montserrat_medium"
        app:layout_constraintStart_toStartOf="@id/viewTopIP"
        app:layout_constraintEnd_toEndOf="@id/viewTopIP"
        app:layout_constraintBottom_toBottomOf="@id/viewTopIP"
        app:layout_constraintTop_toTopOf="@id/viewTopIP"/>
    <com.jsibbold.zoomage.ZoomageView
        android:id="@+id/myZoomageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/_10sdp"
        app:zoomage_restrictBounds="false"
        app:zoomage_animateOnReset="true"
        app:zoomage_autoResetMode="UNDER"
        app:zoomage_autoCenter="true"
        app:zoomage_zoomable="true"
        app:zoomage_translatable="true"
        app:zoomage_minScale="0.6"
        app:zoomage_maxScale="8"
        app:layout_constraintTop_toBottomOf="@id/viewTopIP"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>