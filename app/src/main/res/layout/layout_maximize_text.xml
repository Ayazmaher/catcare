<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lotion"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:id="@+id/viewTopTP"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:background="@drawable/bg_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageButton
        android:id="@+id/ibBackTP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:background="?attr/selectableItemBackground"
        android:padding="@dimen/_10sdp"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="@string/button"
        app:layout_constraintTop_toTopOf="@id/viewTopTP"
        app:layout_constraintBottom_toBottomOf="@id/viewTopTP"
        app:layout_constraintStart_toStartOf="@id/viewTopTP"/>

    <TextView
        android:id="@+id/tvHeadTP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_magnifier"
        android:textAlignment="center"
        android:textColor="@color/lotion"
        android:textSize="@dimen/_17ssp"
        android:fontFamily="@font/montserrat_medium"
        app:layout_constraintStart_toStartOf="@id/viewTopTP"
        app:layout_constraintEnd_toEndOf="@id/viewTopTP"
        app:layout_constraintBottom_toBottomOf="@id/viewTopTP"
        app:layout_constraintTop_toTopOf="@id/viewTopTP"/>

    <TextView
        android:id="@+id/tvResultsTP"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fontFamily="@font/montserrat_bold"
        android:textAlignment="textStart"
        android:textSize="@dimen/_40ssp"
        android:textColor="@color/smoky_black"
        android:layout_margin="@dimen/_10sdp"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@id/viewTopTP"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>